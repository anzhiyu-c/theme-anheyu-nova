{
  "name": "theme-anheyu-nova",
  "version": "1.0.0",
  "private": true,
  "description": "Nova - 一个现代化的博客主题，基于 Next.js 和 HeroUI 构建，适配 anheyu-app 后端",
  "scripts": {
    "dev": "next dev --turbopack --port 3003",
    "build": "next build",
    "start": "next start --port 3000",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "clean": "rm -rf .next node_modules/.cache",
    "pack": "bash scripts/build-ssr-package.sh",
    "pack:quick": "bash scripts/pack-standalone.sh",
    "install-to-pro": "bash scripts/install-to-pro.sh",
    "watch": "bash scripts/watch-and-install.sh",
    "docker:build": "docker build -t anheyu-nova .",
    "docker:run": "docker run -p 3000:3000 -e API_URL=http://host.docker.internal:8091 anheyu-nova"
  },
  "dependencies": {
    "@heroui/react": "2.8.7",
    "@tailwindcss/typography": "^0.5.19",
    "@tanstack/react-query": "^5.62.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^11.18.2",
    "lucide-react": "^0.562.0",
    "next": "16.1.1",
    "next-themes": "^0.4.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.21",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17",
    "typescript": "^5"
  }
}
